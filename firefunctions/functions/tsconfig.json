{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es2015", "dom", "es6"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": false,
    "strict": true
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
   "node_modules"
  ]
}
